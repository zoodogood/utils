{
  "compilerOptions": {
    "declaration": true,
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    /* Completeness */
    "skipLibCheck": true,
    "lib": ["ES2023", "DOM"],
    "outDir": "lib",
    "baseUrl": "src",
    "allowJs": true
  },
  "include": ["src/**/*.ts"]
}
