{
  "compilerOptions": {
    "declaration": true,
    "target": "es2018",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    /* Completeness */
    "skipLibCheck": true,
    "lib": ["ES2023", "DOM"],
    "outDir": "lib",
    "baseUrl": "src",
    "allowJs": true,
    "moduleResolution": "NodeNext"
  },
  "exclude": ["**/*.test.ts"],
  "include": ["src/**/*.ts", "src/**/*.js"]
}
